<% include ../partials/header %>

<div class="container">
    <div clas="row">
        <div class="col-md-3">
            <p class="lead">Beaches</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="image-responsive" src="<%= beach.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">Free Access</h4>
                    <h4><a><%= beach.name %></a></h4>
                    <p><%= beach.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/beaches/<%=beach._id %>/comments/new">Add Comment</a>
                </div>
                <hr/>
                <% beach.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                        
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>




<% include ../partials/footer %>