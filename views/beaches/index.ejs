<% include ../partials/header %>



<div class="container">
    <header class="jumbotron">
        <h1>Welcome to Beaches in Epirus</h1>
        <p>View our hand picked beaches from Epirus</p>
        <p>
            <a class=" btn btn-primary btn-large" href="/beaches/new">Add Beach</a>
        </p>
    </header>
    
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Most Popular Beaches</h3>
        </div>
    </div>
    
    
    <div class="row text-center" style="display:flex; flex-wrap; wrap;">
        <% beaches.forEach(function(beach){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=beach.image %>">
                    <div class="caption">
                        <h4><%= beach.name %></h4>
                    </div>
                    <p>
                        <a href="/beaches/<%= beach._id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>
               
                
            </div>
       <% });%>
    </div>
</div>

<% include ../partials/footer %>

