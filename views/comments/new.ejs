<% include ../partials/header %>
<div class="container">
    <div class="row">
        
        <h1 class="text-center">Add new comment to <%= beach.name %></h1>
        
        <div style="width: 30%; margin: 0 auto;">
            
            
                <form action="/beaches/<%= beach._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="text" name="comment[text]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="author" name="comment[author]">
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-lg btn-default btn-block btn-info">Submit</button>
                    </div>
                </form>
            <a href="/beaches/<%= beach._id %>">Back to <%= beach.name %></a>
        </div>
    </div>
</div>
<% include ../partials/footer %>